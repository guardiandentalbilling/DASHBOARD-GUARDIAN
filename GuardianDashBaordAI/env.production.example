# Production Environment Configuration
# Copy this to .env for production deployment

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# MongoDB Configuration (REQUIRED for production)
# Use MongoDB Atlas for production (recommended)
MONGO_URI=mongodb+srv://guardian_admin:REPLACE_WITH_SECURE_PASSWORD@cluster0.mongodb.net/guardian_dental_db?retryWrites=true&w=majority

# MongoDB Connection Timeouts (for better startup performance)
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000
MONGO_CONNECT_TIMEOUT_MS=10000

# JWT Configuration (REQUIRED for production - MUST be changed)
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_JWT_SECRET_MINIMUM_32_CHARACTERS_LONG

# Security Configuration
BCRYPT_ROUNDS=12

# Domain Configuration (Update with your actual domain)
FRONTEND_URL=https://dashboard.guardiandentalbilling.com
ALLOWED_ORIGINS=https://dashboard.guardiandentalbilling.com,https://www.dashboard.guardiandentalbilling.com

# Session Configuration
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_KEY

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=/uploads

# API Rate Limiting (Production settings)
API_RATE_LIMIT=100  # requests per 15 minutes per IP

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Gemini AI Configuration (Server-side only - DO NOT expose publicly)
# Obtain your API key from Google AI Studio: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=REPLACE_WITH_YOUR_GOOGLE_GENERATIVE_AI_API_KEY