# Production Environment Configuration
# Copy this to .env for production deployment

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# MongoDB Configuration (REQUIRED for production)
# Option 1: MongoDB Atlas (Recommended)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/employee_dashboard?retryWrites=true&w=majority

# Option 2: Local MongoDB
# MONGO_URI=mongodb://localhost:27017/employee_dashboard

# JWT Configuration (REQUIRED for production)
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_characters_long

# Security Configuration
BCRYPT_ROUNDS=12

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Domain Configuration (Update with your actual domain)
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=/uploads

# API Rate Limiting
API_RATE_LIMIT=100  # requests per 15 minutes per IP

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Gemini AI Configuration (Server-side only; DO NOT expose publicly)
GEMINI_API_KEY=replace_with_your_real_google_generative_language_api_key